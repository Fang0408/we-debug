{
  "packages": [
    "packages/runtime/*",
    "packages/compiler/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): %s"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "version": "0.4.0"
}
